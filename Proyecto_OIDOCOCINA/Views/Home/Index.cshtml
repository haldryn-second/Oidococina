            transform: scale(1.5);
        }



        .crop .title {
            opacity:0;
            color: white;
            text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
            position: absolute;
            font-size:1.5em;
            bottom: 1px;
            left: 50%;
            transform: translate(-50%, -50%);
            transition: transform .2s;
        }
    video {
        border-radius: 10px !important;
    }

    .col-md-4 {
        margin-top: 2.5em
    }

    @@keyframes fadeIn {
  0% {
    opacity:0;
  }
  100% {
    opacity:1;
  }
}

