    let loadImage = function (variable) {
        var image = new Image();
        var url_image = './ImageFolder/' + variable + '.jpg';
        image.src = url_image;
        if (image.width == 0) {
            return `<img src='./ImageFolder/defaultImage.jpg'>`;
        } else {
            return `<img src='./ImageFolder/` + variable + `.jpg'`;
        }
    }
</script>
