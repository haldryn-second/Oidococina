@model Proyecto_OIDOCOCINA.Models.GALERIA

@{
    ViewBag.Title = "NUEVA IMAGEN";
}

<h2>INSERTAR NUEVA IMAGEN</h2>
<style>
    .prueba{
        display: flex;
  justify-content: center;
  align-items: center;
    }
</style>



@using (Html.BeginForm("Create", "Galeria", FormMethod.Post, new{enctype= "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="display:none">
        @Html.LabelFor(model => model.Id_Local, "Id_Local", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Id_Local", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Id_Local, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group" style="display:none">
        @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Titulo, new { @Value = "5" })
            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-inline" style="margin:0 auto; width:80%;text-align: center;">

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10" style="display:flex">
                <label for="porta" style="width:60%">Marque la casilla para usar la imagen de portada</label>
                <div id="porta" class="prueba" style="width:30%;vertical-align:middle">@Html.EditorFor(model => model.Portada)</div>
            </div>
        </div>
    </div>
    <div class="form-inline" style="margin:0 auto; width:80%;text-align: center;margin-top:2em">
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.Ruta, new
                {
                    type = "file",
                accept = "image/*"
                })
                @Html.ValidationMessageFor(model => model.Ruta, "", new
                {
                @class = "text-danger d-block"
                })
            </div>
        </div>
    </div>


        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Titulo, new { @Value = "5" })
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-inline" style="margin:0 auto; width:60%;text-align: center;">
            <div class="">
                <br /><br />
                <input style="width:50%" type="submit" value="AÑADIR" class="btn btn-success" />
            </div>
        </div>
    </div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
