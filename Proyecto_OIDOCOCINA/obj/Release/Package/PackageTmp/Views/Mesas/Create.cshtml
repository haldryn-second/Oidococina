@model Proyecto_OIDOCOCINA.Models.MESAS

@{
    ViewBag.Title = "Añadir Mesa";
}

<h2>AÑADIR MESA</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @if (User.IsInRole("Administrador"))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Id_Local, "Id_Local", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Id_Local", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_Local, "", new { @class = "text-danger" })
            </div>
        </div>
}
    <div class="form-inline" style="margin:0 auto; width:60%;text-align: center;">
        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Capacidad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Capacidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Capacidad, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-inline" style="margin:0 auto;margin-top:2em; width:60%;text-align: center;">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="AÑADIR MESA" class="btn btn-success" />
            </div>
        </div>
    </div>
</div>
}



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
