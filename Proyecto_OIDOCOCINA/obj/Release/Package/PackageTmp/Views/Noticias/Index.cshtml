@model IEnumerable<Proyecto_OIDOCOCINA.Models.NOTICIAS>

@{
    ViewBag.Title = "NOTICIAS";
}

    <h2>NOTICIAS</h2>

<p>
    @Html.ActionLink("NUEVA NOTICIA", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destacado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destacado)
        </td>
        <td style="display:flex; text-align:center">
            <form action="~/Noticias/Edit/@item.Id" method="get">
                <button type="submit" class="btn-link"><img style="width:20px" src="~/Content/Icons/edit.png" /></button>
            </form>
            <form action="~/Noticias/Delete/@item.Id" method="get">
                <button type="submit" class="btn-link"><img style="width:20px" src="~/Content/Icons/cerrar.png" /></button>
            </form>
        </td>
    </tr>
}

</table>


